{
  "name": "pro-project-manager",
  "version": "0.1.0",
  "private": true,
  "description": "Cross-platform Electron + Next.js app to manage projects",
  "main": "dist/main.cjs",
  "type": "module",
  "author": {
    "name": "Hussain nazarnejad",
    "email": "hnazarnejad76@gmail.com",
    "url": "https://hippogriff.ir/"
  },
  "homepage": "https://hippogriff.ir/",
  "scripts": {
    "postinstall": "npx electron-rebuild",
    "dev": "concurrently -k -n \"tsup,next,electron\" -c \"green,blue,magenta\" \"npm run dev:tsup\" \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:tsup": "tsup --watch --config tsup.config.ts",
    "dev:next": "next dev ./src/next -p 4152 --turbopack",
    "dev:electron": "wait-on dist/main.cjs http://localhost:4152 && electron .",
    "build": "rm -r out;npm run build:electron && npm run build:next",
    "build:electron": "tsup --config tsup.config.ts",
    "build:next": "NODE_ENV=production next build ./src/next && mv ./src/next/out ./",
    "build:linux": "electron-builder --linux",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "@hookform/resolvers": "^5.2.2",
    "@monaco-editor/react": "^4.7.0",
    "@mui/lab": "^7.0.0-beta.17",
    "@mui/material": "7.3.3",
    "@mui/material-nextjs": "^7.3.3",
    "@tiptap/core": "^2.4.0",
    "@tiptap/extension-code-block": "^2.4.0",
    "@tiptap/extension-code-block-lowlight": "^2.4.0",
    "@tiptap/extension-image": "^2.4.0",
    "@tiptap/extension-link": "^2.4.0",
    "@tiptap/extension-placeholder": "^2.4.0",
    "@tiptap/extension-text-align": "^2.4.0",
    "@tiptap/pm": "^2.4.0",
    "@tiptap/react": "^2.4.0",
    "@tiptap/starter-kit": "^2.4.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "axios": "^1.12.2",
    "dayjs": "^1.11.18",
    "easy-llm-call": "^2.0.6",
    "express": "^5.1.0",
    "monaco-editor": "^0.53.0",
    "mongoose": "8.18.1",
    "next": "15.5.3",
    "node-pty": "^1.0.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.63.0",
    "react-markdown": "^10.1.0",
    "react-simple-typewriter": "^5.0.1",
    "react-syntax-highlighter": "^15.6.6",
    "sonner": "^2.0.7",
    "ssh2": "^1.17.0",
    "tree-kill": "^1.2.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@emnapi/runtime": "^1.5.0",
    "@types/express": "^5.0.3",
    "@types/node": "^20.12.12",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/ssh2": "^1.15.5",
    "concurrently": "9.2.1",
    "electron": "38.1.2",
    "electron-builder": "26.0.12",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "wait-on": "9.0.1"
  },
  "build": {
    "appId": "com.hippogriff.promanager",
    "productName": "Project Manager Pro",
    "icon": "assets/hippogriff.png",
    "asar": true,
    "files": [
      "dist/**",
      "out/**",
      "assets/**",
      "build/**",
      "package.json",
      "node_modules/**"
    ],
    "linux": {
      "icon": "assets/hippogriff.png",
      "category": "Utility",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/hippogriff.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "directories": {
      "output": "binary"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}